<% if user_signed_in? %>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="1">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
    <% if friend.user == current_user %>
      <tr>
        <td><strong>
          <%= link_to friend.first_name + ' ' + friend.last_name, friend %></strong>
        </td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= button_to 'Delete', friend, method: :delete, class: 'btn btn-outline-danger btn-sm'%></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New Friend", new_friend_path, class:"btn btn-dark" %>

<% else %>

<h1>Hello Filly!</h1>
<p>My First Rails Webpage...</p>

<% end %>